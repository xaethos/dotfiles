# https://github.com/dunst-project/dunst/blob/master/dunstrc

[global]
  ## Display
  geometry = "400x5-10+10"
  indicate_hidden = yes
  shrink = yes
  transparency = 70
  padding = 8
  horizontal_padding = 8
  frame_width = 2
  frame_color = "#4C9ED9"
  sort = yes
  idle_threshold = 120

  ## Text
  font = DejaVu Sans 8
  markup = full
  format = "<small>%a</small>\n<b>%s</b>\n%b"
  alignment = left
  vertical_alignment = top
  word_wrap = yes
  ignore_newline = yes

  ## Icon
  icon_position = left
  min_icon_size = 32
  max_icon_size = 64

  ## Misc
  browser = /bin/google-chrome

  ## Mouse
  mouse_left_click = do_action
  mouse_middle_click = close_all
  mouse_right_click = close_current

[shortcuts]
  # Available modifiers are "ctrl", "mod1" (the alt-key), "mod2",
  # "mod3" and "mod4" (windows-key).
  close = mod4+n
  close_all = mod4+shift+n
  history = mod4+ctrl+n
  context = mod4+mod1+n

[urgency_low]
  background = "#223355"
  foreground = "#aaaaaa"
  timeout = 10

[urgency_normal]
  background = "#285577"
  foreground = "#ffffff"
  timeout = 10

[urgency_critical]
  background = "#900000"
  foreground = "#ffffff"
  frame_color = "#ff0000"
  timeout = 0
