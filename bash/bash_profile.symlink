# shortcut to this dotfiles path is $DOTHOME
export DOTHOME=$HOME/.dotfiles

# your project folder that we can `c [tab]` to
export PROJECTS=~/workspace

# use .prelocalrc for exports/configuration local to this system.
if [[ -a $HOME/.prelocalrc ]]
then
  source $HOME/.prelocalrc
fi

# source every .sh and .bash file in this rep
# don't look beyond three levels deep, because some things (like Vim plugins)
# may install scripts of their own down the hierachy.
for config_file in $(find "$DOTHOME/" -maxdepth 3 -regex '.*\.\(ba\)*sh$')
do
  source $config_file
done

# use .localrc for SUPER SECRET CRAP that you don't
# want in your public, versioned repo.
if [[ -a $HOME/.localrc ]]
then
  source $HOME/.localrc
fi

